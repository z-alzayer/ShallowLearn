@article{FINE2019100498,
  title = {Coral Reefs of the {{Red Sea}} — {{Challenges}} and Potential Solutions},
  author = {Fine, M. and Cinar, M. and Voolstra, C. R. and Safa, A. and Rinkevich, B. and Laffoley, D. and Hilmi, N. and Allemand, D.},
  date = {2019},
  journaltitle = {Regional Studies in Marine Science},
  volume = {25},
