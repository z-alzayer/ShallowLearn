  title = {High Salinity Tolerance of the {{Red Sea}} Coral {{Fungia}} Granulosa under Desalination Concentrate Discharge Conditions: {{An}} in Situ Photophysiology Experiment},
  author = {family=Merwe, given=Riaan, prefix=van der, useprefix=true and Röthig, Till and Voolstra, Christian R. and Ochsenkühn, Michael A. and Lattemann, Sabine and Amy, Gary L.},
