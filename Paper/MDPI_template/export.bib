@article{doi:10.1080/01431161.2013.800660,
  title = {Mapping Coral Reefs at Reef to Reef-System Scales, 10s-1000s Km2, Using Object-Based Image Analysis},
  author = {Roelfsema, Chris and Phinn, Stuart and Jupiter, Stacy and Comley, James and Albert, Simon},
