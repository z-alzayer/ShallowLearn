@article{HEDLEY2018598,
  title = {Coral Reef Applications of {{Sentinel-2}}: {{Coverage}}, Characteristics, Bathymetry and Benthic Mapping with Comparison to {{Landsat}} 8},
  author = {Hedley, John D. and Roelfsema, Chris and Brando, Vittorio and Giardino, Claudia and Kutser, Tiit and Phinn, Stuart and Mumby, Peter J. and Barrilero, Omar and Laporte, Jean and Koetz, Benjamin},
  date = {2018},
  journaltitle = {Remote Sensing of Environment},
  volume = {216},
